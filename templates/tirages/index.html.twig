{% extends 'base.html.twig' %}

{% block title %}Tirages index{% endblock %}

{% block body %}
    <h1>Tirages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tir_date</th>
                <th>Tir_1</th>
                <th>Tir_2</th>
                <th>Tir_3</th>
                <th>Tir_4</th>
                <th>Tir_5</th>
                <th>Tir_c</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
