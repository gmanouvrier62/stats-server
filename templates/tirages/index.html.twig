                <td>{{ tirage.tir3 }}</td>
                <td>{{ tirage.tir4 }}</td>
                <td>{{ tirage.tir5 }}</td>
                <td>{{ tirage.tirC }}</td>
                <td>
                    <a href="{{ path('app_tirages_show', {'id': tirage.id}) }}">show</a>
                    <a href="{{ path('app_tirages_edit', {'id': tirage.id}) }}">edit</a>
                </td>
            </tr>
